	/**
	 * For the TextBytes Atom
	 */
	protected TextBytesAtom(byte[] source, int start, int len) {
		// Sanity Checking
		if(len < 8) { len = 8; }

		// Get the header
		_header = Arrays.copyOfRange(source, start, start+8);

		// Grab the text
		_text = IOUtils.safelyClone(source, start+8, len-8, MAX_RECORD_LENGTH);
	}

