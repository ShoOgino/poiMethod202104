   private String toSemicolonList(String[] l) {
      StringBuilder list = new StringBuilder();
      boolean first = true;

      for(String s : l) {
         if(s == null) continue;
         if(first) {
            first = false;
         } else {
            list.append("; ");
         }
         list.append(s);
      }

      return list.toString();
   }

