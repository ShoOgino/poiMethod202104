            "\t  \"recordId\": -4086 /* 0xf00a */\n" +
            "\t, \"version\": 2\n" +
            "\t, \"instance\": 0\n" +
            "\t, \"options\": 2\n" +
            "\t, \"recordSize\": 16 /* 0x00000010 */\n" +
