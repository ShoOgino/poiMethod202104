    private String joinParts(String l, String c, String r) {
		StringBuilder ret = new StringBuilder(64);

    	// Join as c, l, r
    	if(c.length() > 0) {
    		ret.append(HeaderFooterEntity_C);
    		ret.append(c);
    	}
    	if(l.length() > 0) {
    		ret.append(HeaderFooterEntity_L);
    		ret.append(l);
    	}
    	if(r.length() > 0) {
    		ret.append(HeaderFooterEntity_R);
    		ret.append(r);
    	}
    	
    	return ret.toString();
    }

