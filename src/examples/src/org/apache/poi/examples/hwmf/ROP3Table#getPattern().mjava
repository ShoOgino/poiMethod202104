    private static BufferedImage getPattern() {
        byte[] bw = { 0, -1 };
        BufferedImage pattern = new BufferedImage(8, 8, BufferedImage.TYPE_BYTE_INDEXED, new IndexColorModel(1, 2, bw, bw, bw));
        pattern.getRaster().setDataElements(0, 0, 8, 8, PATTERN);
        return pattern;
    }

