    @Test
    public void testClear() {
        IntList list = new IntList();

        for (int j = 0; j < 500; j++) {
            list.add(j);
        }
        assertEquals(500, list.size());
        list.clear();
        assertEquals(0, list.size());
        for (int j = 0; j < 500; j++) {
            list.add(j + 1);
        }
        assertEquals(500, list.size());
        for (int j = 0; j < 500; j++) {
            assertEquals(j + 1, list.get(j));
        }
    }

