    @Test
    void testClearFormatting() {
      HSSFRichTextString r = new HSSFRichTextString("testing");
      assertEquals(0, r.numFormattingRuns());
      r.applyFont(2, 4, new HSSFFont( (short) 1, null));
      assertEquals(2, r.numFormattingRuns());
      r.clearFormatting();
      assertEquals(0, r.numFormattingRuns());
    }

