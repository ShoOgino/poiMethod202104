    /**
     *
     * @return the string to be painted
     */
    public String getString(){
        if(_str == null) return "";

        AttributedCharacterIterator it = _str.getIterator();
         StringBuffer buf = new StringBuffer();
         for (char c = it.first(); c != it.DONE; c = it.next()) {
             buf.append(c);
         }
        return buf.toString();
    }

