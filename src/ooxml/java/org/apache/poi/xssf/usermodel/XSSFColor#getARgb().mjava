   /**
    * Standard Alpha Red Green Blue ctColor value (ARGB).
    */
   public byte[] getARgb() {
      byte[] rgb = getRGBOrARGB();
      if(rgb == null) return null;
      
      if(rgb.length == 3) {
         // Pad with the default Alpha
         byte[] tmp = new byte[4];
         tmp[0] = -1;
         System.arraycopy(rgb, 0, tmp, 1, 3);
         return tmp;
      } else {
         return rgb;
      }
   }

