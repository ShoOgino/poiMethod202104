    /**
     * Get the specified comment by ctComment
     *
     * @param ctComment
     * @return
     */
    public XWPFComment getComment(CTComment ctComment) {
        for (int i = 0; i < comments.size(); i++) {
            if (comments.get(i).getCtComment() == ctComment) {
                return comments.get(i);
            }
        }
        return null;
    }

