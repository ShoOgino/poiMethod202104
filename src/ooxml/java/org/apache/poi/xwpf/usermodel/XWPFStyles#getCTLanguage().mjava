    protected CTLanguage getCTLanguage() {
        ensureDocDefaults();

        CTLanguage lang = null;
        if (defaultRunStyle.getRPr().sizeOfLangArray() > 0) {
            lang = defaultRunStyle.getRPr().getLangArray(0);
        } else {
            lang = defaultRunStyle.getRPr().addNewLang();
        }

        return lang;
    }

