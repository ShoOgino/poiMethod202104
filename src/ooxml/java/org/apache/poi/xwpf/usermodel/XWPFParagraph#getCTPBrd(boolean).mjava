    /**
     * Get a <b>copy</b> of the currently used CTPBrd, if none is used, return
     * a new instance.
     */
    private CTPBdr getCTPBrd(boolean create) {
        CTPPr pr = getCTPPr();
        if (pr != null) {
            CTPBdr ct = pr.isSetPBdr() ? pr.getPBdr() : null;
            if (create && ct == null)
                ct = pr.addNewPBdr();
            return ct;
        }
        return null;
    }

