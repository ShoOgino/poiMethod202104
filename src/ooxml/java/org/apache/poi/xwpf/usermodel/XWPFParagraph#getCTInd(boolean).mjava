    /**
     * Get a <b>copy</b> of the currently used CTPInd, if none is used, return
     * a new instance.
     */
    private CTInd getCTInd(boolean create) {
        CTPPr pr = getCTPPr();
        if (pr != null) {
            CTInd ct = pr.isSetInd() ? pr.getInd() : null;
            if (create && ct == null)
                ct = pr.addNewInd();
            return ct;
        }
        return null;
    }

