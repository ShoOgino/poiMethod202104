    private static String formatSID(int sid) {
       String hex = Integer.toHexString(sid);
       String dec = Integer.toString(sid);
       
       StringBuffer s = new StringBuffer();
       s.append("0x");
       for(int i=hex.length(); i<4; i++) {
          s.append('0');
       }
       s.append(hex);
       
       s.append(" (");
       for(int i=dec.length(); i<4; i++) {
          s.append('0');
       }
       s.append(dec);
       s.append(")");
       
       return s.toString();
    }

