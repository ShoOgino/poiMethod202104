   @Override
   public void write(ByteBuffer src, long position) {
      // Extend if needed
      long endPosition = position + src.capacity();
      if(endPosition > buffer.length) {
         extend(endPosition);
      }

      // Now copy
      src.get(buffer, (int)position, src.capacity());

      // Update size if needed
      if(endPosition > size) {
         size = endPosition;
      }
   }

