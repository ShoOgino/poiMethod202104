    /**
     * Sets footers's text
     *
     * @param text footers's text
     */
    public void setFootersText(String text){
        if(_newRecord) attach();

        setFooterVisible(true);
        CString cs = _container.getFooterAtom();
        if(cs == null) cs = _container.addFooterAtom();

        cs.setText(text);
    }

