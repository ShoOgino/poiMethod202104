    public void testDefaultCodePageEncoding() throws IOException {
        HWPFOldDocument doc = openOldSampleFile("Bug60942.doc");
        Word6Extractor ex = new Word6Extractor(doc);
        String txt = ex.getText();
        assertContains(txt, "BERTHOD");
