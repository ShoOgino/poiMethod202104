    /**
     * Internally converts the width to EMU units.
     *
     * @param width expressed in points.
     */
    public void setWidth(Double width) {
        if (width == null) {
            if (props.isSetW()) {
                props.unsetW();
            }
        } else {
            props.setW(Units.toEMU(width));
        }
    }

